<div class="d-flex flex-column justify-content-center align-items-center">
    <img src="~/images/users/user1.jpg" class="profile-pic" />
</div>

    <form class="p-2">

        <div class="form-group">
            <label for="Name">Name</label>
            <input class="form-control" placeholder="Enter name" />
        </div>
        <div class="form-group my-3">
            <label for="Email">Email</label>
            <input type="email" class="form-control" placeholder="Enter email" />
        </div>
        <div class="form-group my-3">
            <label for="Password">Password</label>
            <input type="password" class="form-control" placeholder="Enter password" />
        </div>
        <div class="form-group my-3">
            <label for="profilePicture">Choose a profile picture</label>
            <input type="file" id="ProfilePicture" name="ProfilePicture" class="form-control" />
        </div>
        <div class="form-group my-3">
            <label for="Status">Status</label>
            <textarea for="Status" rows="3" class="form-control">your status</textarea>
        </div>
        <button type="submit" class="btn btn-primary my-2">Submit</button>
    </form>


