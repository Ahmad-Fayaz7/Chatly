@model InteractiveChat.DTOs.ApplicationUserDTO


<form class="p-2" method="post" enctype="multipart/form-data">
    <input asp-for="@Model.ProfilePicUrl" hidden/>
    <input asp-for="@Model.UserName" hidden/>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <img src="@Model.ProfilePicUrl" class="profile-pic"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.FirstName">Nombre</label>
        <input class="form-control" asp-for="@Model.FirstName" placeholder="@Model.FirstName"/>
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName">Apellidos</label>
        <input class="form-control" asp-for="@Model.LastName" placeholder="@Model.LastName"/>
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
    <div class="form-group my-3">
        <label asp-for="@Model.ProfilePicUrl">Elige una foto de perfil</label>
        <input asp-for="@Model.ProfilePicUrl" type="file" id="ProfilePicUrl" name="ProfilePicUrl" class="form-control"/>
    </div>
    <button type="submit" asp-controller="User" asp-action="Edit" class="btn btn-primary my-2">Entregar</button>
    <button type="submit" asp-controller="Home" asp-action="Index" class="btn btn-primary my-2">Cancelar</button>
</form>